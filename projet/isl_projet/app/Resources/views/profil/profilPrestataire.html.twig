{% extends "base.html.twig" %}

{% block content %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div class="widget">
                                <div class="user-photo">
                                    <a href="#">
                                        <img src="{{asset('img/tmp')}}/agent-2.jpg" alt="User Photo">
                                        <span class="user-photo-action" >Modifier mon logo</span>
                                    </a>
                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->


                            <div class="widget">

                                <div class="menu-advanced">
                                    <p>Membre depuis le {{ utilisateur.Inscription|date('d-m-Y') }}</p>
                                    {% if utilisateur.confInscription == false %}
                                        <div><a class="btn-danger" href="#">Confirmer l'Adresse Email</a></div>
                                    {% endif %}
                                </div>
                            </div><!-- /.widget -->
                            <div class="widget">

                                <div class="menu-advanced">
                                   <div> galerie photo</div>
                                </div>
                            </div><!-- /.widget -->
                            <div class="widget">

                                <ul class="menu-advanced">
                                    <li><a href="{{ path('profil',{'route1':'stages'}) }}"><i class="fa fa-pencil"></i> Stages</a></li>
                                    <li><a href="{{ path('profil',{'route1':'promo'}) }}"><i class="fa fa-pencil"></i> Promotions</a></li>
                          {#TODO#}
                                    <li><a href="#"><i class="fa fa-pencil"></i> Commentaires</a></li>
                                    <li class="active"><a href="{{ path('profil') }}"><i class="fa fa-user"></i> Modifier Profil</a></li>
                                    <li><a href="#"><i class="fa fa-key"></i> Mot de Passe</a></li>
                                    <li><a href="#"><i class="fa fa-sign-out"></i> Déconnexion</a></li>
                                </ul>
                            </div><!-- /.widget -->

                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                <h1>{{ utilisateur.nom|capitalize }}
                                    <span>
                                        {# TODO#}
                                        *ici des étoiles*
                                        {#{% include 'stars.html.twig' %}#}
                                        {#{{ (utilisateur.cote*5)|round(1,'floor') }} / 5#}
                                    </span><!-- /.card-row-rating -->
                                </h1>
                            </div><!-- /.page-title -->

                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Contact Information

                                    <a href="#" class="btn btn-primary btn-xs pull-right">Enregistrer</a>
                                </h3>

                                <div class="row">

                                    <div class="form-group col-sm-6">
                                        <label>Nom</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.nom }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>E-mail</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.email }}">
                                    </div><!-- /.form-group -->

                                </div><!-- /.row -->
                            </div>

                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Addresse

                                    <a href="#" class="btn btn-primary btn-xs pull-right">Enregistrer</a>
                                </h3>

                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label>Site Internet</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.siteInternet}}">
                                    </div><!-- /.form-group -->
                                    <div class="form-group col-sm-6">
                                        <label>Email de contact</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.emailContact}}">
                                    </div><!-- /.form-group -->
                                    <div class="form-group col-sm-6">
                                        <label>Téléphone</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.telephone}}">
                                    </div><!-- /.form-group -->
                                    <div class="form-group col-sm-6">
                                        <label>Numéro de TVA</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.numTVA}}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Rue</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.adresseRue}}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-3">
                                        <label>Numéro</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.adresseNum }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-3">
                                        <label>Code Postal</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.codePostal }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Commune</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.commune }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Localite</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.localite }}">
                                    </div><!-- /.form-group -->

                                </div><!-- /.row -->
                            </div>

                        </div><!-- /.content -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}