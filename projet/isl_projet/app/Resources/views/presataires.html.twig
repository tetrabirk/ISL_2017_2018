{#
    variables attendue

    breadcrumb {crumbs[href,caption]}

    arrayLieux {lieu}

    categoriesDeServices [categorie]

    arrayPrestataires
    {
        prestataire
        {
            image
            categorie[href,name]
            promotionEnAvant

            href
            name
            description

            categoriesDeServices[categorie]
            commune
            localite
            avis [star]

        }

    }


#}


<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                {#

                TITLE

                #}
                <div class="document-title">
                    <h1>{{ page_title }}</h1>

                    <ul class="breadcrumb">
                        {% for crumb in breadcrumb %}
                            <li><a href="crumb.href">{{ crumb.caption }}</a></li>
                        {% endfor %}
                    </ul>
                </div><!-- /.document-title -->



                <div class="col-sm-8 col-lg-9">
                    <div class="content">
                        {#

                        FILTER

                        #}
                        <form class="filter" method="post" action="?">
                            <div class="row">
                                <div class="col-sm-12 col-md-4">
                                    <div class="form-group">
                                        <input type="text" placeholder="Mot-clÃ©" class="form-control">
                                    </div><!-- /.form-group -->
                                </div><!-- /.col-* -->

                                <div class="col-sm-12 col-md-4">
                                    <div class="form-group">
                                        <select class="form-control" title="Lieu">
                                            {% for lieu in arraylieux %}
                                            <option>{{ lieu }}</option>
                                            {% endfor %}
                                        </select>
                                    </div><!-- /.form-group -->
                                </div><!-- /.col-* -->

                                <div class="col-sm-12 col-md-4">
                                    <div class="form-group">
                                        <select class="form-control" title="Categories de services">
                                            {% for categorie in categoriesDeServices %}
                                            <option value="">{{ categorie }}</option>
                                            {% endfor %}
                                        </select>
                                    </div><!-- /.form-group -->
                                </div><!-- /.col-* -->
                            </div><!-- /.row -->

                            <hr>

                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="filter-actions">
                                        <a href="#"><i class="fa fa-close"></i> Reset Filter</a>
                                        <a href="#"><i class="fa fa-save"></i> Save Search</a>
                                    </div><!-- /.filter-actions -->
                                </div><!-- /.col-* -->

                                <div class="col-sm-4">
                                    <button type="submit" class="btn btn-primary">Redefine Search Result</button>
                                </div><!-- /.col-* -->
                            </div><!-- /.row -->
                        </form>

                        {#

                        CARDS

                        #}
                        <div class="cards-row">
                            {% for prestataire in arrayPrestataires %}
                            <div class="card-row">
                                <div class="card-row-inner">
                                    <div class="card-row-image" data-background-image="{{ prestataire.image }}">
                                        <div class="card-row-label"><a href="{{ prestataire.categorie.href }}">{{ prestataire.categorie.name }}</a></div><!-- /.card-row-label -->

                                        <div class="card-row-price">{{ prestataire.promotionEnAvant }}</div><!-- -->

                                    </div><!-- /.card-row-image -->

                                    <div class="card-row-body">
                                        <h2 class="card-row-title"><a href="{{ prestataire.href }}">{{ prestataire.name }}</a></h2>
                                        <div class="card-row-content"><p>{{ prestataire.description }}</p></div><!-- /.card-row-content -->
                                    </div><!-- /.card-row-body -->

                                    <div class="card-row-properties">
                                        <dl>
                                            <dd>Categories</dd>
                                            <dt>
                                                {% for categorie in prestataire.categoriesDeServices %}
                                                    {{ categorie }} ,
                                                {{ endfor}}
                                            </dt>

                                            <dd>Lieu</dd><dt>{{ prestataire.commune }} , {{ prestataire.localite }}</dt>


                                            <dd>Avis</dd>
                                            <dt>
                                                <div class="card-row-rating">
                                                    {% for star in avis %}
                                                        <i class="fa fa-star"></i>
                                                    {% endfor %}
                                                </div><!-- /.card-row-rating -->
                                            </dt>
                                        </dl>
                                    </div><!-- /.card-row-properties -->
                                </div><!-- /.card-row-inner -->
                            </div><!-- /.card-row -->
                            {% endfor %}
                        </div><!-- /.cards-row -->

                        {#

                        PAGER

                        #}
                        <div class="pager">
