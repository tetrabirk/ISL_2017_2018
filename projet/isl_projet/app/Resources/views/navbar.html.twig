<div class="header-logo">
    <a href="{{ path( 'homepage' ) }}">
        <img src="{{ asset('img/logo.jpg') }}" alt="Logo">
        <span>{{ siteInfos.nomSite }}</span>
    </a>
</div><!-- /.header-logo -->

<div class="header-content">
    <div class="header-top">
        <div class="header-search">
            <input type="text" class="form-control" placeholder="Rechercher...">
        </div><!-- /.header-search -->

        <ul class="header-nav-secondary nav nav-pills">
            <li><a href="../../../../superlist-1.0.1/superlist/login.html">Connexion</a></li>
            <li><a href="../../../../superlist-1.0.1/superlist/register.html">Inscription</a></li>
        </ul>
    </div><!-- /.header-top -->

    <div class="header-bottom">
        <div class="header-action">
            <a href="../../../../superlist-1.0.1/superlist/listing-submit.html" class="header-action-inner" title="Add Listing" data-toggle="tooltip" data-placement="bottom">
                <i class="fa fa-plus"></i>
            </a><!-- /.header-action-inner -->
        </div><!-- /.header-action -->

        <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">
            {% for li in menu %}

                <li >
                    <a href="{{ li.href }}">{{ li.nom }}
                        {% if li.submenu is defined %}
                            <i class="fa fa-chevron-down"></i>
                        {% endif %}
                    </a>
                    {% if li.submenu is defined %}
                        <ul class="sub-menu">
                            {% for li in li.submenu %}
                                <li><a href="{{ path( li.href ) }}">{{ li.nom }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>

            {% endfor  %}
        </ul>


        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".header-nav-primary">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

    </div><!-- /.header-bottom -->
</div><!-- /.header-content -->
