{% extends "profilBase.html.twig" %}

{% block content %}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-lg-3">
                        <div class="sidebar">
                            <div class="widget">
                                <div class="user-photo">
                                    <a href="#">
                                        <img src="{{asset('img/tmp')}}/agent-2.jpg" alt="User Photo">
                                        <span class="user-photo-action">Modifier mon avatar</span>
                                    </a>
                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->


                            <div class="widget">

                                <div class="menu-advanced">
                                    <p>Membre depuis le {{ utilisateur.Inscription|date('d-m-Y') }}</p>
                                    {% if utilisateur.confInscription == false %}
                                    <div><a class="btn-danger" href="#">Confirmer l'Adresse Email</a></div>
                                    {% endif %}
                                    <br/>
                                    <p>Newsletter</p>
                                    {% if utilisateur.newsletter == false %}
                                    <div><a class="btn-primary" href="#">S'abonner</a></div>
                                    {% else %}
                                    <div><a class="btn-danger" href="#"> Se Désabonner</a></div>
                                    {% endif %}

                                </div>
                            </div><!-- /.widget -->

                            <div class="widget">

                                <ul class="menu-advanced">
                                    <li class="active"><a href="#"><i class="fa fa-user"></i> Modifier Profil</a></li>
                                    <li><a href="#"><i class="fa fa-key"></i> Mot de Passe</a></li>
                                    <li><a href="#"><i class="fa fa-sign-out"></i> Déconnexion</a></li>
                                </ul>
                            </div><!-- /.widget -->

                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->

                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                <h1>Profil Internaute</h1>
                            </div><!-- /.page-title -->

                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Contact Information

                                    <a href="#" class="btn btn-primary btn-xs pull-right">Enregistrer</a>
                                </h3>

                                <div class="row">
                                    <div class="form-group col-sm-12">
                                        <label>E-mail</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.email }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Nom</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.nom }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Prénom</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.prenom }}">
                                    </div><!-- /.form-group -->



                                </div><!-- /.row -->
                            </div>


                            <div class="background-white p20 mb30">
                                <h3 class="page-title">
                                    Addresse

                                    <a href="#" class="btn btn-primary btn-xs pull-right">Enregistrer</a>
                                </h3>

                                <div class="row">

                                    <div class="form-group col-sm-6">
                                        <label>Rue</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.adresseRue}}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-3">
                                        <label>Numéro</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.adresseNum }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-3">
                                        <label>Code Postal</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.codePostal }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Commune</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.commune }}">
                                    </div><!-- /.form-group -->

                                    <div class="form-group col-sm-6">
                                        <label>Localite</label>
                                        <input type="text" class="form-control" value="{{ utilisateur.localite }}">
                                    </div><!-- /.form-group -->

                                </div><!-- /.row -->
                            </div>

                        </div><!-- /.content -->
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->

{% endblock %}